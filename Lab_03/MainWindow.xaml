<Window x:Class="KMA.CSharp2020.Lab03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lab03="clr-namespace:KMA.CSharp2020.Lab03"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid >
        <ContentControl Name="_contentControl" IsEnabled="{Binding IsControlEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></ContentControl>
        <fa:ImageAwesome 
            Icon="Cog"
            Width="40" Height="40" 
            Spin="True" Visibility="{Binding  LoaderVisibility, 
            Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
        ></fa:ImageAwesome>
    </Grid>
</Window>
